{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "new-article",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the article",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "excerpt": {
      "type": "string",
      "description": "And excerpt that summarizes the article in one line"
    }
  },
  "required": ["title"]
}
